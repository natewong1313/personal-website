---
import FormattedDate from "../components/FormattedDate.astro"
const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg" href="/white_logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-stone-200 font-plex">
    <header class="w-full max-w-2xl mx-auto my-6">
      <p class="font-semibold">Nate Wong</p>
      <div class="bg-stone-100 flex space-x-4 mt-2">
        <div class="bg-red h-6 w-1"></div>
        <a href="/blog" class="hover:underline">Blog</a>/
        <a href="/" class="hover:underline">Me</a>/
      </div>
    </header>
    <main class="flex">
      <article class="w-full max-w-2xl mx-auto">
        <h1 class="text-2xl mb-2 font-bold">{title}</h1>
        <p class="italic text-slate-500 mb-4"><FormattedDate date={pubDate}/></p>
        <slot />
      </article>
    </main>
  </body>
</html>
